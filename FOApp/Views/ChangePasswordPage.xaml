<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FOApp.Views.ChangePasswordPage"
             Title="Đổi mật khẩu">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Mật khẩu hiện tại" />
            <Entry x:Name="currentPasswordEntry" IsPassword="True" />

            <Label Text="Mật khẩu mới" />
            <Entry x:Name="newPasswordEntry" IsPassword="True" />

            <Label Text="Xác nhận mật khẩu mới" />
            <Entry x:Name="confirmPasswordEntry" IsPassword="True" />

            <Button Text="Đổi mật khẩu" Clicked="OnChangePasswordButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>